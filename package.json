{
  "name": "nzbunity",
  "version": "2.0.0-alpha.2",
  "license": "MPL-2.0",
  "description": "Send and control NZB files directly with SABnzbd or NZBGet download clients.",
  "author": "tumblfeed@gmail.com",
  "keywords": [
    "NZB"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tumblfeed/nzbunity"
  },
  "homepage": "https://github.com/tumblfeed/nzbunity",
  "bugs": {
    "url": "https://github.com/tumblfeed/nzbunity/issues"
  },
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "test": "vitest --mode test",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.280",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@wxt-dev/module-react": "^1.1.2",
    "happy-dom": "^17.2.2",
    "typescript": "^5.6.3",
    "vitest": "^3.0.7",
    "wxt": "^0.19.13"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 90,
    "tabWidth": 2
  }
}
