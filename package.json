{
  "name": "nzbunity",
  "version": "2.0.0-alpha.0",
  "license": "MPL-2.0",
  "description": "Send and control NZB files directly with SABnzbd or NZBGet download clients.",
  "author": "tumblfeed@gmail.com",
  "keywords": [
    "NZB"
  ],
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tumblfeed/nzbunity"
  },
  "homepage": "https://github.com/tumblfeed/nzbunity",
  "bugs": {
    "url": "https://github.com/tumblfeed/nzbunity/issues"
  },
  "scripts": {
    "start": "yarn watch",
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "sass": "sass --update --color src/content/css:build/content/css",
    "sass:watch": "yarn lint -- --watch",
    "lint": "esw --ext .js,.jsx,.ts,.tsx --color src",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "test": "jest --color",
    "test:watch": "yarn test --verbose --watch"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-inferrable-types": "off",
      "prettier/prettier": [
        "error",
        {
          "printWidth": 120,
          "singleQuote": true,
          "trailingComma": "all",
          "arrowParens": "avoid"
        }
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "./src"
    ],
    "setupFiles": [
      "jest-webextension-mock",
      "jest-fetch-mock",
      "dotenv/config",
      "./jest.setup.ts"
    ],
    "testEnvironment": "jsdom"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/chrome": "0.0.168",
    "@types/firefox-webext-browser": "^94.0.0",
    "@types/jest": "^27.0.3",
    "@types/webextension-polyfill": "^0.8.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "consola": "^2.15.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-watch": "^7.0.0",
    "jest": "^27.4.3",
    "jest-fetch-mock": "^3.0.3",
    "jest-webextension-mock": "^3.7.19",
    "postcss": "^8.4.6",
    "prettier": "^2.5.1",
    "rollup": "^2.68.0",
    "rollup-plugin-chrome-extension": "^3.6.7",
    "rollup-plugin-empty-dir": "^1.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-zip": "^1.0.3",
    "sass": "^1.44.0",
    "ts-jest": "^27.1.0",
    "typescript": "^4.5.2",
    "web-ext-types": "^3.2.1",
    "webextension-polyfill": "^0.8.0"
  },
  "packageManager": "yarn@3.1.1"
}
